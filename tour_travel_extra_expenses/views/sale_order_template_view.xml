                            <field name="name" required="1"/>
                            <field name="qty"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal"/>
                        </tree>
                    </field>
                </page> -->
            </xpath>
            <xpath expr="//page[@name='group costing']" position="after">
                <page string="Terms and Condition">
                    <field name = "terms"/>
                </page>
            </xpath>
        </field>
    </record>
