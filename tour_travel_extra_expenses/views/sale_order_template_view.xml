<odoo>
    <!-- Inherit Sale Order Template Form View-->
    <record id="extra_expense_sale_order_template_form_inherit" model="ir.ui.view">
        <field name="name">extra.expense.sale.order.templete.form.inherit</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="tour_travel_management.tour_travel_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lines']" position="after">
                <page name="guide" string="Guide">
                    <field name="guide_package_line_ids" context="{'default_date': arrival_date}" 
                        widget="section_and_note_one2many">
                        <tree string='Guide' editable='bottom'>
                            <control>
                                    <create name="add_product_control" string="Add a guide"/>
                                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                            </control>
                            <field name="display_type" invisible="1"/>
                            <field name="sequence" widget="handle"/>
                            <field name="date" attrs="{'required': [('display_type', '=', False)]}"/>
                            <field name="city_id" domain="[('state_id', '=', parent.state_id)]"/>
                            <field name="guide_id" attrs="{'required': [('display_type', '=', False)]}" domain="[('registration_type','=','guide'), ('city_id', '=', city_id)]" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="service_id" context="{'guide_id': guide_id}" attrs="{'required': [('display_type', '=', False)]}" domain="[('type_travel_product','=','guide')]" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="name" required="1" widget="section_and_note_text" attrs="{'required': [('display_type', 'in', ['line_section','line_note'])]}"/>
                            <field name="contact"/>
                            <field name="cost_price"/>
                            <field name="price_unit"/>
                        </tree>
                    </field>
                </page>
               <page name="extra_tickets" string="Extra Ticket">
                    <field name="extra_ticket_package_line_ids" context="{'default_date': arrival_date}"
                        widget="section_and_note_one2many">
                        <tree string='Extra Ticket' editable='bottom'>
                            <control>
                                    <create name="add_product_control" string="Add a extra ticket"/>
                                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                            </control>
                            <field name="sequence" widget="handle"/>
                            <field name="display_type" invisible="1"/>
                            <field name="date" attrs="{'required': [('display_type', '=', False)]}"/>
                            <field name="ticket_id" attrs="{'required': [('display_type', '=', False)]}" domain="[('type_travel_product','=','extra_tickets')]" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="supplier_id" domain="[('supplier_rank','=',True)]" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="name" required="1" widget="section_and_note_text" attrs="{'required': [('display_type', 'in', ['line_section','line_note'])]}"/>
                            <field name="qty"/>
                            <field name="cost_price"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal"/>
                        </tree>
                    </field>
                </page>
<!--                 <page name="sightseeing" string="Sightseeing">
                    <field name="sightseeing_package_line_ids" context="{'default_date': arrival_date}">
                        <tree string='Sightseeing' editable='bottom'>
                            <control>
