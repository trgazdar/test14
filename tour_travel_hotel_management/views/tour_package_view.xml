<odoo>
    <!-- Inherit Sale Order Template Form View-->
    <record id="sale_order_template_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.templete.form.inherit</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="tour_travel_management.tour_travel_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lines']" position="after">
                <page name="hotels" string="Hotels">
                    <field name="hotel_package_line_ids" context="{'default_from_date': arrival_date,'default_to_date': return_date}"
                        widget="section_and_note_one2many">
                        <tree string='Hotels' editable='bottom'>
                            <control>
	                            <create name="add_product_control" string="Add a hotel"/>
	                            <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
	                            <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                            </control>
                            <field name="sequence" widget="handle"/>
                            <field name="display_type" invisible="1"/>
                            <field name="from_date"/>
                            <field name="to_date"/>
                            <field name="contract_id" invisible="1"/>
                            <field name="state_id" invisible="1"/>
                            <field name="city_id" domain="[('state_id','in',[state_id])]" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="hotel_id" context="{'from_date':from_date, 'to_date':to_date, 'city_id':city_id}" domain="[('registration_type','=','hotel'),('is_hotel','=',True)]" attrs="{'required': [('display_type', '=', False)]}" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="room_type_id" context="{'from_date':from_date, 'to_date':to_date, 'hotel_id':hotel_id}" domain="[('hotel_id','in',[hotel_id])]" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="name" required="1" widget="section_and_note_text" attrs="{'required': [('display_type', '!=', False)]}"/>
                            <field name="stay_days"/>
                            <field name="qty"/>
                            <field name="cost_price"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal"/>
                            <field name="sale_order_templete_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='itinerary']//field[@name='itinerary_ids']//tree[@name='itinerary']" position="inside">
                <field name="hotel_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>