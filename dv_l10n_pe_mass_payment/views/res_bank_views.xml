<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- model.name inherit form view -->
    <record id="view_res_bank_form_form_inherit" model="ir.ui.view">
        <field name="name">res.bank.inherit.view.form</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bic']" position="after">
                <field name="saving_account_digits"/>
                <field name="current_account_digits"/>
                <field name="cci_account_digits"/>
            </xpath>
        </field>
    </record>
</odoo>