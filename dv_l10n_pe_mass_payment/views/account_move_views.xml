<odoo>
    <!-- Prioridad de facturas -->
    <record id="account_move_payment_priority_view_tree" model="ir.ui.view">
        <field name="name">account.move.view.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree string="Facturas de proveedores" create="false" editable="bottom">
                <field name="l10n_pe_partner_vat"/>
                <field name="partner_id"/>
                <field name="state" invisible="1"/>
                <field name="l10n_latam_document_type_id" readonly="1"/>
                <field name="l10n_latam_document_number"/>
                <field name="invoice_date"/>
                <field name="company_id" invisible="1"/>
                <field name="invoice_payment_term_id"/>
                <field name="invoice_date_due"/>
                <field name="invoice_date_due" widget="remaining_days"/>
                <field name="currency_id"/>
                <field name="amount_total_signed" string="Total" sum="Total" decoration-bf="1" optional="show"/>
                <field name="amount_residual_signed" string="Saldo" sum="Amount Due" optional="show"/>
                <field name="payment_priority"/>
                <field name="payment_planned_date"/>
                <button name="open_record" type="object" string="Ver factura"/>
            </tree>
        </field>
    </record>
    <record id="invoice_payment_priority_action" model="ir.actions.act_window">
        <field name="name">Prioridad de facturas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('account_move_payment_priority_view_tree')})]"/>
        <field name="domain">[('move_type', '=', 'in_invoice'),('state', '=', 'posted'),('payment_state','not in',['paid', 'in_payment'])]</field>
        <field name="context">{'default_move_type': 'in_invoice'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Priorizar facturas por pagar
            </p>
            <p>
                No tiene facturas por pagar.
            </p>
        </field>
    </record>
</odoo>