<odoo>
    <!-- Inherit Sale Order Template Form View-->
    <record id="ticket_sale_order_template_form_inherit" model="ir.ui.view">
        <field name="name">ticket.sale.order.templete.form.inherit</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="tour_travel_management.tour_travel_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lines']" position="after">
                <page name="ticketing" string="Ticketing">
                    <field name="ticket_package_line_ids" widget="section_and_note_one2many" mode="tree" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}">
                        <tree string='Tickets' editable='bottom'>
                            <control>
                                    <create name="add_product_control" string="Add a Ticket Information"/>
                                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                            </control>
                            <field name="sequence" widget="handle"/>
                            <field name="display_type" invisible="1"/>
                            <field name="supplier_id"/>
                            <field name="product_id" domain="[('type_travel_product','=','tickets')]" attrs="{'required': [('display_type', '=', False)]}" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="source_id" attrs="{'required': [('display_type', '=', False)]}" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="destination_id" attrs="{'required': [('display_type', '=', False)]}" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="fare_type_id" attrs="{'required': [('display_type', '=', False)]}" />
                            <field name="ticket_no" string="PNR No" invisible="1"/>
                            <field name="name" required="1" widget="section_and_note_text" attrs="{'required': [('display_type', '!=', False)]}"/>
                            <field name="issue_date" attrs="{'required': [('display_type', '=', False)]}"/>
                            <field name="cost_price" />
                            <field name="qty"/>
                            <field name="unit_price" string="Fare Price"/>
                            <field name="price_subtotal" string="Subtotal"/>
                            <field name="sale_order_templete_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
                <page name="visa" string="Visa">
                    <field name="visa_package_line_ids" widget="section_and_note_one2many">
                        <tree string='Visa' editable='bottom'>
                            <control>
                                    <create name="add_product_control" string="Add a product"/>
                                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                            </control>
                            <field name="sequence" widget="handle"/>
                            <field name="display_type" invisible="1"/>
                            <field name="product_id" attrs="{'required': [('display_type', '=', False)]}" domain="[('type_travel_product','=','visa')]" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="supplier_id" domain="[('supplier_rank','=',True)]" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="name" required="1" widget="section_and_note_text" string="Description" attrs="{'required': [('display_type', '!=', False)]}"/>
                            <field name="visa_status"/>
                            <field name="cost_price"/>
                            <field name="unit_price" />
                            <field name="sale_order_templete_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="tour_ticket_sale_order_view_form" model="ir.ui.view">
         <field name="name">tour.ticket.sale.order.form.inherit</field>
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale.view_order_form" />
         <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="ticket_id" invisible="1"/>
                <field name="visa_id" invisible="1"/>
            </xpath>
         </field>
    </record>
</odoo>