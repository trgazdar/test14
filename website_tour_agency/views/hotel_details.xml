<odoo>
    <template id="hotel_details_page" name="Hotel Details">
        <t t-call="website.layout">
            <section class="oe_structure" style="background-color: #eee;">
                <div class="container">
                	<div class="row" t-if="not template">
                         <div class="col-md-12 col-11 pt32 pb32">
                        	<h4 class="text-center text-muted">No Record Found</h4>
                         </div>
                	</div>
                    <div t-if="template">
                        <div class="col-md-12 col-11">
                            <div class="small_box_h3">
                                <h3 class="">
                                    <t t-esc="template.name" />
                                </h3>
                                <div class="mt16">
                                    <span class="">
                                        <t t-call="website_tour_agency.star_card_travel">
                                            <t t-set="val_integer" t-value="template.rating" />
                                        </t>
                                    </span>
                                </div>
                            </div>
                        </div>
                       <div class="col-md-12 col-112 mb16 px-0 text-center">
                        	<img t-if="template.image_1920" class="img-thumbnail shadow img-responsive fixed_carousel_height" t-att-src="image_data_uri(template.image_1920)" />
                        	<img t-if="not template.image_1920" src="/web/static/src/img/placeholder.png" alt="hotel"/>
                        </div>
                        <div class="col-md-12 col-12 mb16" style="background-color: #fff;">
                                <div class="text-center small_box_h3">
                                	<h4 style="color:black;font-weight: 800;">
		                                Overview
		                            </h4>
		                            <t t-if="template.room_line_ids" t-set="room_price" t-value="min(template.room_line_ids.mapped('unit_price'))"/>
	                            <span t-if="template.room_line_ids" class="text-yellow"><span>Starting From</span> <t t-esc="room_price" t-options='{"widget": "monetary", "display_currency": template.currency_id}'/></span>
                                </div>
                                <div class="text-container">
                                    <div class="wpb_wrapper text-content short-text" style="line-height: 25px;">
                                        <div t-field="template.description" />
                                    </div>
                                    <div class="show-more">
                                        <a href="#">Show more</a>
                                    </div>
                                </div>
                                <div class="mb32 text-center col-md-12 col-sm-12 col-xs-12">
                                    <a t-attf-href="/hotel/details/#{template.id}/inquiry"  type="button" class="btn btn-black"> Enquire Now</a>
                                </div>
                        </div>
                    </div>
                    <div class="row justify-content-center mt16" t-if="template">
                        <div class="col-md-12 col-11 mb32" t-if="template.facilities_ids">
                            <h4 style="color:black;">Facilities</h4>
                            <div class="col-md-12 pt32 pb16 list_style_none" style="background-color: white;">
	                            <div class="row">
	                            	<t t-foreach="template.facilities_ids" t-as="facilities">
		                                <li class="mb16 col-md-3">
		                                    <t t-if="facilities.icon_class">
		                                        <i t-attf-class="#{facilities.icon_class} icon_color_details" />
		                                    </t>
		                                    <span t-esc="facilities.name" />
		                                </li>
		                            </t>
	                            </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-11 mb32">
	                        <div class="col-md-12 col-12 mb8 pl-0" t-if="template.room_line_ids">
	                            <h4 style="color:black;">Hotel Rooms</h4>
	                        </div>
	                        <div t-if="template.room_line_ids" class="col-12" style="background-color: white;">
	                            <div class="col-12 pt32 pb16 list_style_none">
	                                <table class="table table-striped table-bordered table-list">
	                                    <thead>
	                                        <tr>
	                                            <th>Room</th>
	                                            <th>Total Capacity</th>
	                                            <th>Price</th>
	                                        </tr>
	                                    </thead>
	                                    <tbody>
		                                    <t t-foreach="template.room_line_ids" t-as="line">
		                                        <tr>
		                                            <td>
		                                                <t t-esc="line.room_id.name" />
		                                            </td>
		                                            <td>
		                                                <t t-esc="line.capacity" />
		                                            </td>
		                                            <td>
		                                                <t t-esc="line.unit_price" t-options='{"widget": "monetary", "display_currency": template.currency_id}'/>
		                                            </td>
		                                        </tr>
		                                    </t>
	                                    </tbody>
	                                </table>
	                            </div>
	                        </div>
                        </div>
                        <div class="col-sm-6 col-11 mb32">
                        	<div class="col-12 mb8 pl-0" t-if="template.meal_package_line_ids">
	                            <h4 style="color:black;">Meal Package</h4>
	                        </div>
	                        <div t-if="template.meal_package_line_ids" class="col-12" style="background-color: white;">
	                            <div class="col-12 pt32 pb16 list_style_none">
	                                <table class="table table-striped table-bordered table-list">
	                                    <thead>
	                                        <tr>
	                                            <th>Meal Package</th>
	                                            <th>Price</th>
	                                        </tr>
	                                    </thead>
	                                    <tbody>
		                                    <t t-foreach="template.meal_package_line_ids" t-as="line">
		                                        <tr>
		                                            <td>
		                                                <t t-esc="line.meal_package_id.name" />
		                                            </td>
		                                            <td>
		                                                <t t-esc="line.unit_price" t-options='{"widget": "monetary", "display_currency": template.currency_id}'/>
		                                            </td>
		                                        </tr>
		                                    </t>
	                                    </tbody>
	                                </table>
	                            </div>
	                        </div>
                        </div>
                    </div>
                </div>
            </section>
        </t>
    </template>
</odoo>