<odoo>
    <template id="package_details" name="Packages Details">
        <t t-call="website.layout">
            <section class="oe_structure gray-bg">
                <div class="container">
                	<div class="row justify-content-center">
                		<div class="col-md-12 col-10 mt32">
                			<h2 class="text-yellow" style="font-weight:bold"><t t-esc="template.name" /></h2>
                		</div>
                	</div>
                    <div class="row justify-content-center pb64">
                        <div class="col-md-7 col-10 mt32">
                        	<img class="img-responsive" t-att-src="website.image_url(template, 'image_medium')" style="width:100%;"/>
                        </div>
                        <div class="col-md-5 col-10 mt32" style="background-color: #fff;">
	                        <div class="text-center small_box_h3">
	                            <h4 style="color:black;font-weight: 800;">
	                                <t t-esc="template.package_total_days"/>
	                            </h4>
	                            <span class="text-yellow"><t t-esc="request.env.ref('base.main_company').currency_id.symbol"/> <span t-esc="'%.2f'% template.sell_per_person"/> <span>per person*</span></span>
	                        </div>
	                        <div class="text-container col-12">
	                            <div class="wpb_wrapper text-content short-text" style="line-height: 25px;">
	                                <div t-field="template.discription" />
	                            </div>
	                            <div class="show-more pt16 pb16">
	                                <a href="#">Show more</a>
	                            </div>
	                        </div>
	                        <div class="mb32 text-center col-12">
	                            <a t-attf-href="/package/details/#{ slug(template)}/inquiry" class="btn btn-black">  Enquire Now</a>
	                        </div>
                        </div>
                        <div class="col-md-12 col-10 mt32" t-if="template.itinerary_ids">
                            <h4 style="color:black;">Itinerary</h4>
                        </div>
                        <div t-if="template.itinerary_ids" class="col-md-12 col-10 mt8" style="background-color: white;">
                            <div class="col-12 mt32 mb16 list_style_none">
                                <table class="table table-striped table-bordered table-list">
                                    <thead>
                                        <tr>
                                            <th style="width:100px;" class="">Date</th>
                                            <th>Program</th>
                                        </tr>
                                    </thead>
                                    <tbody>
	                                    <t t-foreach="template.itinerary_ids" t-as="line">
	                                        <tr>
	                                            <td>
	                                                 <p class="mb0" t-field="line.itinerary_date" t-options='{"widget": "date"}'/>
	                                            </td>
	                                            <td>
	                                                <t t-esc="line.description" />
	                                            </td>
	                                        </tr>
	                                    </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </t>
    </template>
</odoo>