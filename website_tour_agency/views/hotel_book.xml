<odoo>
    <template id="website.hotel_book_now" name="Hotel Book Now">
        <t t-call="website.layout">
            <section class="oe_structure" style="background-image: url('/website_tour_agency/static/src/img/bg_yellow.jpg'); background-repeat: no-repeat; background-attachment: fixed; background-position: center center; background-size: cover !important;">
                <!-- <section style="height: 70vh; background-image: url(&quot;/website_tour_agency/static/src/img/home_header.jpg&quot;);" class="s_fix_bg_snippet s_fix_bg_option s_fix_bg_snippet oe_img_bg oe_custom_bg">
                    <div class="container-fluid s_fix_bg_title text-center" style="height:70vh; background-color: rgba(0,0,0,0.5);">
                        <span style="color: rgb(254, 193, 7); font-family: Lora, serif; font-size: 40px; font-style: italic; font-weight: 600; letter-spacing: 2px; text-transform: capitalize;">
                        Book Now !<br /><small><t t-esc="hotel.name" /></small></span>
                        <br />
                    </div>
                </section> -->
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1 mt64 mb64">
                            <div class="col-md-12 form_booking " style="background-color: #fff; border-radius: 5px;">
                                <h3 style="color:black;" class="text-center"><t t-esc="hotel.name" /></h3>
                                <p class="mb16 text-center" style="color:gray;">Enter your details to get expert advise</p>
                                <div class="col-md-10 mb64 col-md-offset-1 v_form_div">
                                    <form role="form" data-toggle="validator" action="/website_form/" method="post" data-model_name="crm.lead" data-success_page="/page/website_crm.contactus_thanks" class="s_website_form nav bs-sidenav" enctype="multipart/form-data">
                                        <input type="hidden" id="hotel_id" name="name" t-att-value="hotel.name" />
                                        <div class="form-row">
                                            <div class="form-group form-field o_website_form_required_custom col-md-6">
                                                <label for="name">Name</label>
                                                <input type="text" class="form-control o_website_form_input" id="" name="name" t-att-value="request.params.get('name', '')" required=""/>
                                            </div>

                                            <div class="form-group form-field o_website_form_required_custom col-md-6">
                                                <label for="mobile">Phone</label>
                                                <input type="text" class="form-control o_website_form_input" id="" name="mobile" t-att-value="request.params.get('mobile', '')" required=""/>
                                            </div>

                                            <div class="form-group form-field o_website_form_required_custom col-md-6">
                                                <label for="email">Email</label>
                                                <input type="email" class="form-control o_website_form_input" id="" t-att-value="request.params.get('mobile', '')" required=""/>
                                            </div>

                                            <div class="form-group o_website_form_required_custom col-md-6">
                                                <label for="sel1">Nationality</label>
                                                <select name="country_id" class="form-control" required="">
                                                    <option value=""></option>
                                                    <t t-foreach="countries" t-as="country">
                                                        <option t-att-value="country.id">
                                                            <t t-esc="country.name" />
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>

                                            <div class="form-group date col-md-6" data-provide="datepicker">
                                                <label for="name">Travel Date</label>
                                                <div class="input-append date" id="datePicker">
                                                    <input type="text" class="form-control" id="t_date" name="tdate" required="" />
                                                </div>
                                            </div>
                                            <div class="form-group date col-md-6" data-provide="datepicker">
                                                <label for="name">Return Date</label>
                                                <div class="input-append date" id="datePicker">
                                                    <input type="text" class="form-control" id="r_date" name="rdate" required="" />
                                                </div>
                                            </div>

                                            <div class="form-group form-field o_website_form_required_custom col-md-6">
                                                <label for="days">No of Days</label>
                                                <input type="text" class="form-control o_website_form_input" id=""/>
                                            </div>

                                            <div class="form-group form-field o_website_form_required_custom col-md-6">
                                                <label for="participents">No of Persons</label>
                                                <input type="text" class="form-control o_website_form_input" id=""/>
                                            </div>

                                            <div class="form-group form-field o_website_form_required_custom col-md-12">
                                                <label for="notes">Notes</label>
                                                <input type="text" class="form-control o_website_form_input" name="description" id=""/>
                                            </div>

                                            <div class="form-group col-md-3" style="">
                                                <span style="margin-top: 23px; background-color: rgb(249,65,65) !important; color:white !important; box-shadow: 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12);" class="btn btn-danger thm-btn o_website_form_send">Get A Call</span>
                                                <span id="o_website_form_result"></span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- <div class="col-md-4 mt64 mb64" style="background-color: white;">
                            <h3 class="text-center small_box_h3">Need Help?</h3>
                            <p style="color: #999; line-height: 25px;">Our team is 24/7 at your service to help you with your booking issues or answer any related questions</p>
                            <t t-foreach="company" t-as="comp">
                                <div class="text-center">
                                        call <span class="price_hotel_detail_box"><t t-esc="comp.phone" /></span></div>
                            </t>
                            <div class="mb64" />
                        </div> -->
                    </div>
                </div>
            </section>
        </t>
    </template>
</odoo>