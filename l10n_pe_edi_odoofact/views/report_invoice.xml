<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="page" style="font-size: 0.75rem;">
                    <div id="invoice_header" class="row">
                        <div t-attf-class="#{'col-8' if report_type != 'html' else 'col-12 col-sm-8'} col-auto mb-2">
                            <div class="card mb-2">
                                <div class="card-header">
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-4 col-sm-4 mb-0"><strong>CLIENT</strong></dt>
                                        <dd class="col-auto col-8 col-sm-8 mb-0"></dd>
                                    </dl>
                                </div>
                                <div class="card-body">                                    
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-4 col-sm-4 mb-0">
                                            <span class="text-nowrap" t-esc="o.partner_id.commercial_partner_id.l10n_latam_identification_type_id and o.partner_id.commercial_partner_id.l10n_latam_identification_type_id.name or 'DOCUMENTO'"/>:
                                        </dt>
                                        <dd class="col-auto col-8 col-sm-8 mb-0">
                                            <span class="text-nowrap" t-esc="o.partner_id.commercial_partner_id.vat or '00000000'"/>
                                        </dd>
                                    </dl>
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-4 col-sm-4 mb-0">
                                            DENOMINATION:
                                        </dt>
                                        <dd class="col-auto col-8 col-sm-8 mb-0">
                                            <span class="text" t-field="o.partner_id.commercial_partner_id.name"/>
                                        </dd>
                                    </dl>
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-4 col-sm-4 mb-0">
                                            ADDRESS:
                                        </dt>
                                        <dd class="col-auto col-8 col-sm-8 mb-0">
                                            <span class="text" t-esc="o.partner_id.street_name or ''"/> 
                                            <span class="text" t-esc="o.partner_id.street_number or ''"/> 
                                            <span class="text" t-esc="o.partner_id.street_number2 or ''"/> 
                                            <span class="text" t-esc="o.partner_id.street2 or ''"/>
                                            <t t-if="o.partner_id.l10n_pe_district">
                                                , <span class="text" t-esc="o.partner_id.l10n_pe_district.name or ''"/>
                                            </t>
                                            <t t-if="o.partner_id.city_id">
                                                , <span class="text-nowrap" t-esc="o.partner_id.city_id.name or ''"/>
                                            </t>
                                            <t t-if="o.partner_id.state_id">
                                                , <span class="text-nowrap" t-esc="o.partner_id.state_id.name or ''"/>
                                            </t>
                                            <t t-if="o.partner_id.country_id">
                                                , <span class="text-nowrap" t-esc="o.partner_id.country_id.name or ''"/>
                                            </t>
                                        </dd>
                                    </dl>
                                    <div class="row mb-0">
                                        <div class="col-auto col-6 col-sm-7 mb-0">
                                            <dl class="row mb-0">
                                                <dt class="col-auto col-7 col-sm-7 mb-0">
                                                    INVOICE DATE:
                                                </dt>
                                                <dd class="col-auto col-5 col-sm-5 mb-0">
                                                    <span class="text-nowrap" t-field="o.invoice_date"/>
                                                </dd>
                                            </dl>
                                            <dl class="row mb-0">
                                                <dt class="col-auto col-7 col-sm-7 mb-0">
                                                    DUE DATE:
                                                </dt>
                                                <dd class="col-auto col-5 col-sm-5 mb-0">
                                                    <span class="text-nowrap" t-field="o.invoice_date_due"/>
                                                </dd>
                                            </dl>
                                        </div>
                                        <div class="col-auto col-6 col-sm-5 mb-0">
                                            <dl class="row mb-0">
                                                <dt class="col-auto col-6 col-sm-6 mb-0">
                                                    CURRENCY:
                                                </dt>
                                                <dd class="col-auto col-6 col-sm-6 mb-0">
                                                    <span class="text-nowrap" t-esc="o.currency_id.name == 'PEN' and 'Soles' or o.currency_id.currency_unit_label"/>
                                                </dd>
                                            </dl>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-12 col-sm-4'} col-auto mb-2 order-first order-sm-last">
                            <div class="card mb-3 text-center">
                                <div class="card-header">
                                    <h5>
                                        <span class="font-weight-bold">RUC <t t-esc="o.company_id.vat"/></span>
                                    </h5>
                                    <h5>
                                        <span class="font-weight-bold text-uppercase" t-esc="o.l10n_latam_document_type_id and o.l10n_latam_document_type_id.report_name or 'NO VALID'"/>
                                    </h5>
                                    <h5>
                                        <span class="font-weight-bold" t-esc="o.name or 'NO VALID'"/>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                    
                    <table class="table table-sm o_main_table min-vh-50" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th name="th_quantity" class="text-right"><span>QTY</span></th>
                                <th name="th_uom" class="text-right"><span>UOM</span></th>
                                <th name="th_description" class="text-left"><span>CODE / DESCRIPTION</span></th>
                                <th name="th_valueunit" t-attf-class="text-right"><span>V/U</span></th>                               
                                <th name="th_priceunit" t-attf-class="text-right"><span>P/U</span></th>
                                <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>DISC.%</span>
                                </th>
                                <th name="th_subtotal" class="text-right">
                                    <span>AMOUNT</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                        </td>
                                        <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <td t-attf-class="text-right">
                                            <span class="text-nowrap" t-esc="abs(line.l10n_pe_edi_price_unit_excluded)"/>
                                        </td>
                                        <td t-attf-class="text-right">
                                            <span class="text-nowrap" t-esc="abs(line.l10n_pe_edi_price_unit_included)"/>
                                        </td>
                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-field="line.price_total"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div id="total" class="row">
                        <div t-attf-class="#{'col-8' if report_type != 'html' else 'col-12 col-sm-8'} col-auto mb-2">
                            <div class="card mb-2">
                                <div class="card-body">
                                    <dl class="row mb-0" t-if="o.l10n_pe_edi_retention_type_id">
                                        <dt class="col-12 col-sm-12 mb-0">
                                            OPERATION SUBJECT TO I.G.V. RETENTION RATE <span t-esc="o.l10n_pe_edi_retention_type_id.rate"/>%
                                        </dt>
                                    </dl>
                                    <dl class="row mb-0" t-if="o.l10n_pe_edi_service_order">
                                        <dt class="col-5 col-sm-5 mb-0">
                                            PURCHASE/SERVICE ORDER:
                                        </dt>
                                        <dd class="col-7 col-sm-7 mb-0">
                                            <span class="text-nowrap" t-field="o.l10n_pe_edi_service_order"/>
                                        </dd>
                                    </dl>
                                    <t t-foreach="o.l10n_pe_edi_picking_number_ids" t-as="pick_number">
                                        <dl class="row mb-0">
                                            <dt class="col-5 col-sm-5 mb-0">
                                                <span t-field="pick_number.type"/>:
                                            </dt>
                                            <dd class="col-7 col-sm-7 mb-0" t-esc="pick_number.name"/>
                                        </dl>
                                    </t>
                                    <dl class="row mb-0" t-if="o.invoice_payment_term_id">
                                        <dt class="col-auto col-5 col-sm-5 mb-0">
                                            PAYMENT TERMS:
                                        </dt>
                                        <dd class="col-auto col-7 col-sm-7 mb-0" t-esc="o.invoice_payment_term_id.name"/>
                                    </dl>
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-5 col-sm-5 mb-0">
                                            METHOD OF PAYMENT:
                                        </dt>
                                        <dd class="col-auto col-7 col-sm-7 mb-0" t-esc="o.l10n_pe_edi_is_sale_credit and '[CRÉDITO POR PAGAR]' or '[CONTADO]'"/>
                                    </dl>
                                    <dl class="row mb-0" t-if="o.narration">
                                        <dt class="col-auto col-5 col-sm-5 mb-0">
                                            OBSERVATIONS:
                                        </dt>
                                        <dd class="col-auto col-7 col-sm-7 mb-0" t-esc="o.narration"/>
                                    </dl>
                                    <dl class="row mb-0" t-if="o.l10n_latam_document_type_id.internal_type != 'invoice' and o.l10n_pe_edi_reversal_serie and o.l10n_pe_edi_reversal_number">
                                        <dt class="col-auto col-5 col-sm-5 mb-0">
                                            RELATED DOCUMENT:
                                        </dt>
                                        <dd class="col-auto col-7 col-sm-7 mb-0" t-esc="o.l10n_pe_edi_reversal_serie + '-' + o.l10n_pe_edi_reversal_number"/>
                                    </dl>
                                </div>
                                <div class="card-header">
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-5 col-sm-5 mb-0">
                                            <strong>AMOUNT IN WORDS:</strong>
                                        </dt>
                                        <dd class="col-auto col-7 col-sm-7 mb-0" t-esc="o.l10n_pe_edi_amount_in_words"/>
                                    </dl>
                                </div>
                                <t t-if="o.l10n_pe_edi_dues_ids">
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-auto mb-0">
                                            <table class="table table-sm" style="page-break-inside: avoid;">
                                                <thead>
                                                    <tr><th colspan="3" class="text-center"><strong>DUES</strong></th></tr>
                                                    <tr>
                                                        <th name="th_dues_number" class="text-right">NRO</th>
                                                        <th name="th_dues_paid_date" class="text-right">PAID DATE</th>
                                                        <th name="th_dues_amount" class="text-right">AMOUNT</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-set="dues" t-value="o.l10n_pe_edi_dues_ids.sorted(lambda l: l.dues_number)"/>
                                                    <t t-foreach="dues" t-as="due">
                                                        <tr>
                                                            <td class="text-right">
                                                                <span t-field="due.dues_number"/>
                                                            </td>
                                                            <td class="text-right">
                                                                <span t-field="due.paid_date"/>
                                                            </td>
                                                            <td class="text-right">
                                                                <span t-field="due.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                    <tr class="o_total">
                                                        <td class="text-right" colspan="2">
                                                            TOTAL
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-field="o.amount_total"/>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </dt>
                                    </dl>
                                </div>
                                </t>
                            </div>
                        </div>
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-12 col-sm-4'} col-auto mb-2 order-first order-sm-last">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_amount_advance">
                                    <td>
                                        <span><strong>ADVANCE</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_advance"/>
                                    </td>
                                </tr>
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_amount_base">
                                    <td>
                                        <span><strong>BASE AMOUNT </strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_base"/>
                                    </td>
                                </tr>
                                <tr class="border-black o_subtotal" style="" t-if="o.l10n_pe_edi_amount_discount">
                                    <td>
                                        <span><strong>DISCOUNT (-)</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_discount"/>
                                    </td>
                                </tr>
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_global_discount">
                                    <td>
                                        <span><strong>G. DISCOUNT (-)</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_global_discount"/>
                                    </td>
                                </tr>
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_amount_exonerated">
                                    <td>
                                        <span><strong>EXONERATED</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_exonerated"/>
                                    </td>
                                </tr>
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_amount_unaffected">
                                    <td>
                                        <span><strong>UNAFFECTED</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_unaffected"/>
                                    </td>
                                </tr>
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_amount_free">
                                    <td>
                                        <span><strong>AMOUNT FREE</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_free"/>
                                    </td>
                                </tr>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr class="o_subtotal" style="">
                                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                            <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="amount_by_group[0]"/>
                                                <span class="text-nowrap"> on
                                                    <t t-esc="amount_by_group[4]"/>
                                                </span>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td><strong>TOTAL</strong></td>
                                    <td class="text-right">
                                        <span class="text-nowrap" t-field="o.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                            <table class="table table-sm" style="page-break-inside: avoid;" t-if="o.l10n_pe_edi_retention_type_id">
                                <tr class="o_subtotal" t-if="o.l10n_pe_edi_total_retention">
                                    <td>
                                        <strong><span>RETENTION</span> <span t-esc="o.l10n_pe_edi_retention_type_id.rate"/>%</strong>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_total_retention"/>
                                    </td>
                                </tr>
                                <tr class="border-black o_total" t-if="o.l10n_pe_edi_amount_total_retention">
                                    <td><strong>TOTAL WITH RETENTION</strong></td>
                                    <td class="text-right">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_total_retention"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div id="invoice_info" class="row">
                        <div class="col-auto mb-0">
                            <div class="card mb-0">
                                <div class="card-body">
                                    <div id="invoice_footer" class="row">
                                        <div t-attf-class="#{'col-9' if report_type != 'html' else 'col-12 col-sm-9'} col-auto mb-2">
                                            <p>Printed representation of the <span class="font-weight-bold text-uppercase" t-esc="o.l10n_latam_document_type_id and o.l10n_latam_document_type_id.report_name or 'NO VALID'"/> <span class="font-weight-bold" t-esc="o.name or 'NO VALID'"/>, visit <span class="font-weight-bold" t-esc="o.company_id.l10n_pe_edi_ose_id and o.company_id.l10n_pe_edi_ose_id.control_url or 'NO VALID'"/>
                                            </p>
                                            <p><span t-esc="o.company_id.l10n_pe_edi_ose_id and o.company_id.l10n_pe_edi_ose_id.authorization_message or ' '"/></p>
                                        </div>
                                        <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-12 col-sm-3'} col-auto mb-2">
                                                <img t-att-src="'/report/barcode/QR/%s|%s|%s|%s|%s|%s|%s|%s|%s|'%(o.company_id.vat,o.l10n_latam_document_type_id.code,o.l10n_pe_edi_serie,o.l10n_pe_edi_number,o.l10n_pe_edi_amount_igv,o.amount_total,o.invoice_date,o.partner_id.l10n_latam_identification_type_id.l10n_pe_vat_code,o.partner_id.vat)" class="img-fluid img-thumbnail rounded mx-auto d-block" style="width:100px;height:100px;"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_invoice" inherit_id="account.report_invoice">
            <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
                <t t-if="o._get_name_invoice_report() == 'l10n_pe_edi_odoofact.report_invoice_document'"
                    t-call="l10n_pe_edi_odoofact.report_invoice_document" t-lang="lang"/>
            </xpath>
        </template>

        <template id="report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
            <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
                <t t-if="o._get_name_invoice_report() == 'l10n_pe_edi_odoofact.report_invoice_document'"
                    t-call="l10n_pe_edi_odoofact.report_invoice_document" t-lang="lang"/>
            </xpath>
        </template>
    </data>
</odoo>
