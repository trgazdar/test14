<odoo>
    <!--Herencia del modelo vehicle-->

    <!--Agregar campos en la vista para guardar-->
    <record id="trip_stork_form" model="ir.ui.view">
        <field name="name">trip.stork.view.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <!--Ocultamos el grupo conductor-->
            <xpath expr="//sheet/group[1]/group[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!--Ocultamos el grupo contrato-->
            <xpath expr="//sheet/notebook/page[1]/group[1]/group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <!--Acomodamos el campo adicional-->
            <xpath expr="sheet" position="inside">
                <group>
                    <field name="stork_code"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>