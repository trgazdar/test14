<odoo>
    <!--VISTA QUE SE MUESTRA AL MOMENTO DE LISTAR-->
    <record model="ir.ui.view" id="action_vista_trip_tree">
        <field name="name">register.trip.tree</field>
        <field name="model">trip.trip</field>
        <field name="arch" type="xml">
            <tree string="Tabla de Viajes">
                <field name="no_trip"/>
                <field name="nro_rendicion"/>
            </tree>
        </field>
    </record>

    <!--FORMULARIO PARA AGREGAR-->
    <record model="ir.ui.view" id="action_vista_trip_form">
        <field name="name">register.trip.form</field>
        <field name="model">trip.trip</field>
        <field name="arch" type="xml">
            <form string="Formulario de viajes">
                <sheet>
                    <!--DATOS DEL VIAJE-->
                    <group col="2">
                        <group string="DATOS DEL VIAJE">
                            <field name="no_trip"/>
                            <field name="nro_rendicion"/>
                            <field name="delivery_date"/>
                            <field name="paica_cod_tracto"/>
                            <field name="itinerary_id"/>
                            <field name="shipment"/>
                            <field name="no_axles"/>
                            <field name="no_invoice"/>
                            <field name="given_amount"/>
                        </group>
                        <group string="TRAMOS DEL VIAJE">
                            <field name="trip_section_ids" nolabel="1"/>
                        </group>
                    </group>
                    <!--DETALLES DE UN VIAJE-->
                    <group col="2" string="DETALLES DEL VIAJE">
                        <!-- <field name="stork_id"/>-->
                        <field name="driver_id"/>
                    </group>
                    <group>
                        <field name="trip_trip_detail_ids" string="Guias">
                            <tree>
                                <field name="servintes"/>
                                <field name="pikango"/>
                                <field name="remitente"/>
                                <field name="precio"/>
                            </tree>
                        </field>
                    </group>
                    <!--GASTOS DEL VIAJE-->
                    <group col="3" string="GASTOS DEL VIAJE">
                        <field name="viaticos" colspan="1"/>
                        <field name="peajes"/>
                        <field name="otros_viajes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--ACCIONES DE VENTANA-->
    <!--Trip-->
    <record model="ir.actions.act_window" id="action_list_trip">
        <field name="name">trip.viajes</field>
        <field name="res_model">trip.trip</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Itinerary-->
    <record model="ir.actions.act_window" id="action_list_itinerary">
        <field name="name">trip.itinerarios</field>
        <field name="res_model">trip.itinerary</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>