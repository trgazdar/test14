<odoo>
    <record model="ir.ui.view" id="action_vista_section_tree">
        <field name="name">register.section.tree</field>
        <field name="model">trip.section</field>
        <field name="arch" type="xml">
            <tree string="Tabla tramos de viaje">
                <field name="type"/>
                <field name="departure_date"/>
                <field name="arrival_date"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="action_vista_section_form">
        <field name="name">register.section.form</field>
        <field name="model">trip.section</field>
        <field name="arch" type="xml">
            <form string="Formulario de tramos">
                <sheet>
                    <group colspan="2">
                        <group>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="departure_date"/>
                            <field name="arrival_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="trip_sourcing_ids">
                            <tree string="Tabla de Abastecimientos" editable="bottom">
                                <field name="source"/>
                                <field name="station"/>
                                <field name="odometer"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>