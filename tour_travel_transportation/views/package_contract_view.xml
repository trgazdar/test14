<odoo>

    <!-- Inherit Package Contract Form View-->
    <record id="transportation_package_contract_form_inherit" model="ir.ui.view">
        <field name="name">transportation.package.contract.form.inherit</field>
        <field name="model">package.contract</field>
        <field name="inherit_id" ref="tour_travel_management.package_contract_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="transportation_id" attrs="{'invisible': [('package_contract_type', '!=', 'transportation')], 'required': [('package_contract_type', '=', 'transportation')],'readonly':[('state','in',['open','close','cancel'])]}"
                     domain="[('registration_type','=','transportation')]"
                     context="{'city_id':city_id, 'package_contract_type':package_contract_type, 'form_view_ref': 'tour_travel_transportation.transportation_supplier_registration_form_inherit'}"
                     options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
            </field>
            <xpath expr="//page[@name='notes']" position="before">
                <page name="transportation_detail" string="Transportation" attrs="{'invisible': [('package_contract_type', '!=', 'transportation')]}">
                    <field name="transportation_contract_line_ids" attrs="{'readonly':[('state','in',['open','close','cancel'])]}">
                        <tree string="Transportation" editable='bottom'>
                            <field name="transportation_id" invisible="1"/>
                            <field name="package_contract_type" invisible="1"/>
                            <field name="transportation_package_contract_id" invisible="1"/>
                            <field name="vehicle_id" string="Vehicle" required="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="capacity"/>
                            <field name="unit_price" string="Cost Price"/>
                            <field name="sales_price"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>


    <record id="transportation_package_contract_inherit_search" model="ir.ui.view">
        <field name="name">transportation.package.contract.inherite.search</field>
        <field name="model">package.contract</field>
        <field name="inherit_id" ref="tour_travel_management.package_contract_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="transportation_id" filter_domain="[('transportation_id','ilike',self)]"/>
            </xpath>
        </field>
    </record>
</odoo>