<odoo>
    
    <record model="ir.ui.view" id="view_tree_tabla_control">
        <field name="name">tabla_control.view.tree</field>
        <field name="model">control_guias</field>
        <field name="arch" type="xml">
          <tree string="Control de Guias" editable="bottom">
              <field name="fecha_envio" invisible="1"/>
              <field name="fecha_entrega" invisible="1" />
              <field name="destino" invisible="1"/>
              <field name="marca" invisible="1"/>
              <field name="modelo" invisible="1"/>
              <field name="color" invisible="1"/>
              <field name="destinatario_id" invisible="1"/>
              <field name="cod_ciguena" invisible="1"/>
              <field name="remitente" invisible="1"/>
              <field name="num_chasis" invisible="1"/>
              <field name="pikango" invisible="1"/>
              <field name="servintes" invisible="1"/>
              <field name="cliente_final_id" invisible="1"/>
              <field name="valor" invisible="1"/>
          </tree>
        </field>
    </record>




    <!--Acciones de ventana-->
    <record id="action_view_controlguias" model="ir.actions.act_window">
        <field name="name">Control de Guias</field>
        <field name="res_model">control_guias</field>
    </record>

    <record id="action_view_facturacion" model="ir.actions.act_window">
        <field name="name">Facturacion</field>
        <field name="res_model">facturacion</field>
    </record>


    
    <!--Menus-->

    <menuitem
        id="menu_main_tabla_control"
        parent=""
        name="Tabla Control"
        action="tabla_control.action_view_controlguias"/>

    <menuitem
        id="menu_controlguias"
        name="Control de guias"
        parent="tabla_control.menu_main_tabla_control"
        action="tabla_control.action_view_controlguias"/>
    
    <menuitem
        id="menu_mas"
        name="Mas"
        parent="tabla_control.menu_main_tabla_control"
        action="tabla_control.action_view_facturacion"/>

    <menuitem
        id="menu_facturacion"
        name="Facturacion"
        parent="tabla_control.menu_mas"
        action="tabla_control.action_view_facturacion"/>


</odoo>
