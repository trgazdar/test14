<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tour</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <div  data-string="Tour" data-key="tour_travel_management" string="Tour and Travels">
                    <h2>Tour and Travels</h2>
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <group>
                             <field name="product_discount_id"/>
                             <field name="product_extra_bed_id"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
