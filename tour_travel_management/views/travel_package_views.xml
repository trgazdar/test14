<odoo>
	<record id ="tour_travel_package_form" model="ir.ui.view">
        <field name="name">tour.travel.package.form</field>
        <field name="model">sale.order.template</field>
        <field eval="1" name="priority"/>
        <field name="arch" type ="xml">
            <form string="Package Name">
                <header>
                    <button
                        string="Confirm Package"
                        name="button_confirm"
                        states="draft"
                        type="object"
                        class="oe_highlight"/>
                    <button
                        string="Done"
                        name="button_done"
                        states="confirm"
                        type="object"
                        class="oe_highlight"/>
                    <button
                        string="Set To Draft"
                        name="button_draft"
                        states="done,cancel"
                        type="object"
                        class="oe_highlight"/>
                    <button
                        string="Cancel Package"
                        name="button_cancel"
                        states="draft,confirm"
                        type="object"
                        confirm="Are you sure you want to cancel this package?" />
                    <button name="create_rfq" string="Create RFQ" type="object" attrs="{'invisible': [('rfq_count', '>=', 1)]}"/>
                    <button name="action_generate_purchase_orders" string="Generar Órdenes de Compra" type="object" attrs="{'invisible': [('rfq_count', '>=', 1)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" >  
                        <button 
                            name="button_registration_total" 
                            type="object" icon="fa-user-plus">
                            <field name="total_registration"/> Registration
                        </button>
                        <button name="open_rfq_view" type="object" icon="fa-file-text-o" class="oe_stat_button"
                        attrs="{'invisible': [('rfq_count', '=', 0)]}">
                            <field name="rfq_count" widget="statinfo" string="RFQ"/>
                        </button>
                        <button 
                            name="button_passenger_total" 
                            type="object" icon="fa-users">
                            <field name="total_passenger"/> Travellers
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div  attrs="{'invisible': [('tour_number', '=', False)]}">
                        <h1>
                        <field name="tour_number" class="oe_inline"/>
                    </h1>
                    </div>
                    <div class="" >
                        <label for="name" string="Package Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Package Name" required="1" style="width: 90%;" class='col-8'/>
                            <field name="package_total_days" class="col-4" style="text-align: right; font-size: 20px;"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="package_type" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <label for="pax_group" string="Minimum/Maximum Travellers"/>
                            <div class="o_row">
                                <field name="pax_group" required="1" nolabel="1" class="oe_inline" />
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="max_pax_group" nolabel="1" class="oe_inline" required="1" />
                            </div>
                            <label for="arrival_date" string="Arrival/Departure Date"/>
                            <div class="o_row">
                                <field name="arrival_date" context="{'change_arrival':True}" widget="daterange" nolabel="1" class="oe_inline" required="1" options="{'related_end_date': 'return_date'}" attrs="{'readonly':[('state','in',['done','cancel'])]}"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="return_date" context="{'change_return':True}" widget="daterange" nolabel="1" class="oe_inline" required="1" options="{'related_start_date': 'arrival_date'}" attrs="{'readonly':[('state','in',['done','cancel'])]}"/>
                            </div>
                            <field name="days" invisible="1"/>
                            <field name="nights" invisible="1"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="category_id" required="1" options="{'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="responsible_id" required="1"/>
                            <!--Develogers Start-->
                            <field name="amount_total_without_commission"/>
                            <label for="commission_percentage" string="Porcentaje de comisión"/>
                            <div class="o_row">
                                <field name="commission_percentage"/>
                                <span>%</span>
                            </div>
                            <field name="amount_total"/>
                            <!--Develogers End-->
                            <field name="is_package" invisible="1"/>
                        </group>
                        <group>
                            <field name="country_id" attrs="{'readonly':['|',('package_type','!=','international'),('state','!=','draft')]}" context="{'package_type':package_type}"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                            <field name="state_id" attrs="{'readonly':[('state','!=','draft')]}" domain="[('country_id','=?',country_id)]" required="1"/>
                            <!-- <field name="cost_currency_id" readonly="1"/> -->
                        </group>
                    </group>
                    <separator string="Other Information"/>
                    <notebook name="package_notebook">
                        <page string="Lines" name="lines" attrs="{'invisible':[('is_package','=',True)]}">   
                        <field name="sale_order_template_line_ids" widget="section_and_note_one2many">
                            <form string="Quotation Template Lines">
                                <field name="sequence" invisible="1"/>
                                <field name="display_type" invisible="1"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <group attrs="{'invisible': [('display_type', '!=', False)]}">
                                    <group>
                                        <field name="product_id" attrs="{'required': [('display_type', '=', False)]}"/>
                                        <label for="product_uom_qty"/>
                                        <div>
                                            <field name="product_uom_qty" class="oe_inline"/>
                                        </div>
                                        <field name="price_unit"/>
                                        <label for="discount" groups="product.group_discount_per_so_line"/>
                                        <div groups="product.group_discount_per_so_line">
                                            <field name="discount" class="oe_inline"/> %
                                        </div>
                                    </group>
                                </group>
                                <notebook colspan="4" name="description">
                                    <page string="Description" attrs="{'invisible': [('display_type', '!=', False)]}">
                                        <field name="name"/>
                                    </page>
                                    <page string="Section" attrs="{'invisible': [('display_type', '!=', 'line_section')]}">
                                        <field name="name"/>
                                    </page>
                                    <page string="Note" attrs="{'invisible': [('display_type', '!=', 'line_note')]}">
                                        <field name="name"/>
                                    </page>
                                </notebook>
                            </form>
                            <tree string="Quotation Template Lines" editable="bottom">
                                <control>
                                    <create name="add_product_control" string="Add a product"/>
                                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                </control>

                                <field name="display_type" invisible="1"/>
                                <field name="sequence" widget="handle"/>
                                <field name="product_id"/>
                                <field name="name" widget="section_and_note_text"/>
                                <field name="product_uom_qty"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <field name="product_uom_id" groups="uom.group_uom" attrs="{'required': [('display_type', '=', False)]}"/>
                                <field name="discount" groups="product.group_discount_per_so_line"/>
                                <field name="price_unit"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Optional Products" attrs="{'invisible':[('is_package','=',True)]}">
                        <field name="sale_order_template_option_ids">
                          <tree string="Quotation Template Lines" editable="bottom">
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="quantity"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="uom_id" groups="uom.group_uom"/>
                          </tree>
                        </field>
                    </page>
                    <page string="Confirmation" attrs="{'invisible':[('is_package','=',True)]}">
                        <group>
                            <field name="require_signature"/>
                            <field name="require_payment"/>
                            <field name="mail_template_id" context="{'default_model':'sale.order'}"/>
                        </group>
                    </page>
                        <page string="Details">
                            <field name="discription"/>
                        </page>
                        <page name='itinerary' string="Itinerary">
                            <button name="action_generate_itinerary_plan" string="Generar itinerario automáticamente" type="object" class="btn-primary"/>
                            <!-- Develogers <button name="action_generate_itinerary_plan" string="Generate Itinerary Plan" type="object" states="draft" class="btn-primary oe_edit_only"/>-->
                            <separator/>
                            <field name="itinerary_ids">
                                <tree string='Itinerary' editable='bottom' name="itinerary">
                                    <field name="itinerary_date" required="1"/>
                                    <field name="description"/>
                               </tree>
                            </field>
                        </page>
                        <page string="Group Costing" name="group costing">
                        	<button name="action_fetch_cost_sale_price" string="Update Sale/Cost Price" type="object" states="draft" class="btn-primary oe_edit_only"/>
                            <separator/>
                                <field name="cost_per_person" string="Cost Price/Person" invisible="1"/>
                                <field name="sell_per_person" string="Sales Price/Person" invisible="1"/>
                                <field name="profit_margin" invisible="1"/>
                                <field name="group_costing_ids" nolabel="1">
                                	<tree string='Group Costing' editable='bottom' name="group_costing">
	                                    <field name="name"/>
	                                    <field name="number_of_adult"/>
	                                    <field name="number_of_children"/>
	                                    <field name="cost_price"/>
	                                    <field name="sales_price"/>
                               		</tree>
                                </field>
                            <separator/>
                        </page>
                    </notebook>   
                    <field name="note" nolabel="1"
                        placeholder="The Administrator can set default Terms &amp; Conditions in package Settings. Terms set here will show up instead if you select this quotation template."/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
		</field>
	</record>

    <record id ="tour_travel_package_tree" model="ir.ui.view">
        <field name="name">tour.travel.package.tree</field>
        <field name="model">sale.order.template</field>
        <field name="arch" type ="xml">
            <tree>
                <field name="name" string="Package Name"/>
                <field name="package_type"/>
                <field name="category_id"/>
                <field name="pax_group"/>
                <field name="package_total_days"/>
                <field name="arrival_date"/>
                <field name="return_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id ="tour_travel_package_kanban" model="ir.ui.view">
        <field name="name">tour.travel.package.kanban</field>
        <field name="model">sale.order.template</field>
        <field name="arch" type ="xml">
            <kanban class="o_package_kanban_view">
                <field name="days"/>
                <field name="nights"/>
                <field name="name"/>
                <field name="pax_group"/>
                <field name="package_type"/>
                <field name="arrival_date"/>
                <field name="return_date"/>
                <field name="state"/>
                <field name="total_passenger"/>
                <templates>
                    <t t-name='kanban-box'>
                        <div t-attf-class='oe_kanban_card oe_kanban_global_click'>
                            <div class="o_package_left">
                                <div class="o_package_day">
                                    <field name="nights"/><br/>
                                </div>
                                <div>
                                    <span>Nights</span>
                                </div>
                                <div class="o_package_day">
                                    <field name="days"/><br/>
                                </div>
                                <div>
                                    <span>Days</span>
                                </div>
                            </div>
                            <div class="o_package_right">
                                <div>
                                    <h4>
                                        <b class="o_kanban_record_subtitle"><field name="name"/></b>
                                        <b class="o_kanban_record_title text-muted"><field name="package_type"/></b><br/>
                                    </h4>
                                </div>
                                <div class='o_kanban_bottom_left'>
                                    <div class="text-muted" style="font-weight: 900;">
                                        <i class="fa fa fa-calendar" title="Arrival Date"/>
                                         <field name="arrival_date"/>
                                        <i class="fa fa-fighter-jet" title="Return Date"/>
                                        <field name="return_date"/>
                                    </div>
                                    <div style="font-weight: 900;" class="mt8">
                                        <i class="fa fa fa-users"/>
                                        <t t-esc ="record.total_passenger.raw_value"/> <strong> Travellers</strong><br/>
                                    </div>
                                </div>
                                <div class="mt8 o_kanban_bottom_right" style="float: right;">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'warning', 'confirm': 'success', 'cancele': 'danger', 'done': 'default'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id ="tour_travel_package_search" model="ir.ui.view">
        <field name="name">tour.travel.package.search</field>
        <field name="model">sale.order.template</field>
        <field name="arch" type ="xml">
            <search string="Search Package">
                <field name="name" string="Package" filter_domain="['|', '|',('name', 'ilike', self), ('tour_number', 'ilike', self),('state_id', 'ilike', self)]"/>
                <field name="tour_number"/>
                <field name="state_id"/>
                <field name="state" string="State"/>
                <filter string="In Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Confirm" name="confirm" domain="[('state', '=', 'confirm')]"/>
                <filter string="In Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="In Cancel" name="cancel" domain="[('state', '=', 'cancel')]"/>
            </search>
        </field>
    </record>

	<record id="action_tour_travel_package" model="ir.actions.act_window">
        <field name="name">Packages</field>
        <field name="res_model">sale.order.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="tour_travel_package_search"/>
        <field name="context">{'default_is_package':1}</field>
        <field name="domain">[('is_package','=',True)]</field> 
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a New Package  
            </p>
        </field>
    </record>

    <record id="action_tour_travel_package_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="tour_travel_management.tour_travel_package_tree"/>
        <field name="act_window_id" ref="tour_travel_management.action_tour_travel_package"/>
    </record>

    <record id="action_tour_travel_package_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="tour_travel_management.tour_travel_package_form"/>
        <field name="act_window_id" ref="tour_travel_management.action_tour_travel_package"/>
    </record>

    <record id="action_tour_travel_package_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="tour_travel_management.tour_travel_package_kanban"/>
        <field name="act_window_id" ref="tour_travel_management.action_tour_travel_package"/>
    </record>
</odoo>
